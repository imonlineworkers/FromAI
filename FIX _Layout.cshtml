@import url("https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,300;0,400;0,500;0,700;1,300;1,400;1,500;1,700&display=swap");

a {
  text-decoration: none;
}

li {
  list-style: none;
}

body {
  font-family: "Poppins", sans-serif;
}

.wrapper {
  display: flex;
}

.main {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  width: 100%;
  overflow: hidden;
  transition: all 0.5s ease-in-out;
  background-color: #fff;
}

#sidebar {
  min-width: 90px;
  width: 90px;
  transition: all 0.5s ease-in-out;
  background-color: rgb(2, 14, 87);
  display: flex;
  flex-direction: column;
}

#sidebar.expand {
  min-width: 240px;
  width: 240px;
}

#sidebar:not(.expand) .sidebar-logo,
#sidebar:not(.expand) a.sidebar-link span {
  display: none;
}

.toggle-button {
  width: 30px;
  height: 30px;
  color: #fff;
  border-radius: 10px;
  font-size: 18px;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: transparent;
}

.toggle-button i {
  color: #fff;
}

#sidebar.expand .sidebar-logo,
#sidebar.expand a.sidebar-link span {
  transition: all 0.3s ease-in-out;
}

.sidebar-logo a {
  color: #fff;
  font-size: 1.15rem;
  font-weight: 600;
  white-space: nowrap;
}

.sidebar-nav {
  padding: 0.7rem 0;
  flex: 11 auto;
  z-index: 10;
}

.sidebar-item {
  position: relative;
}

a.sidebar-link {
  padding: 0.625rem 1.625rem;
  color: #fff;
  display: flex;
  align-items: center;
  white-space: nowrap;
  font-size: 0.9rem;
  height: 50px;
  position: relative;
}

.sidebar-link i {
  font-size: 1.1rem;
  margin-right: 0.75rem;
}

a.sidebar-link span {
  display: inline-block;
  transition: transform 0.3s ease-in-out; /* Animasi smooth */
}

a.sidebar-link:hover span {
  transform: translateX(10px); /* Geser ke kanan */
}

a.sidebar-link:hover {
  background-color: rgb(19, 132, 238);
}

a.sidebar-link::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 6px;
  height: 100%;
  background-color: #ffffff; /* Warna garis */
  opacity: 0; /* Mulai hidden */
  transform: scaleY(0);
  transition: transform 0.3s ease-in-out, opacity 0.3s ease-in-out;
  transform-origin: center;
  border-radius: 0 10px 10px 0;
}

a.sidebar-link:hover::before {
  transform: scaleY(1); /* Garis muncul */
  opacity: 1; /* Nampilin garis */
}

.sidebar-footer {
  padding: 0.7rem 0;
}

.navbar {
  background-color: #ffffff;
  box-shadow: 0 0 2rem 0 rgb(2, 14, 87, 0.14);
}

.navbar-expand .navbar-collapse {
  min-width: 200px;
}

.avatar {
  width: 40px;
  height: 40px;
}

.card {
  background-color: #ffffff;
  transition: 0.4s;
  cursor: pointer;
  color: black;
  margin-bottom: 1rem;
  border-color: rgb(231, 234, 243, 0.7);
}

.card h6 {
  text-transform: uppercase;
  font-size: 0.7161rem;
  margin-bottom: 0.25rem;
}

.card:hover {
  background-color: #293b5f;
  color: #fff;
  transform: translateY(-10.5px);
}

.content {
  flex: 11 auto;
}

.footer {
  background-color: #fff;
  padding: 1rem 0.875rem;
}

@media (min-width: 768px) {
  .input-group-navbar .form-control:focus {
    outline: none;
    box-shadow: 0 0 0 0 rgb(255, 255, 255);
    border: none;
    background-color: #f5f5f5;
  }

  .input-group-navbar {
    max-width: 320px;
  }

  .input-group-navbar .form-control {
    color: #3e4455;
    background-color: #f5f5f5;
    height: calc(2.44375rem+2px);
  }

  .input-group-navbar .btn {
    color: #000;
    background-color: #fff;
    cursor: pointer;
    z-index: 1000;
  }

  .input-group-navbar .btn:active {
    background-color: #f5f5f5;
  }

  .navbar-expand .navbar-nav .dropdown-menu {
    box-shadow: 0.1rem 0.2rem rgb(0, 0, 0, 05);
  }
}

const hamburger = document.querySelector(".toggle-button");
const toggler = document.querySelector("#icon");

hamburger.addEventListener("click", function(){
    document.querySelector("#sidebar").classList.toggle("expand");
    toggler.classList.toggle("bx-menu-alt-right");
    toggler.classList.toggle("bx-menu-alt-left");
});
